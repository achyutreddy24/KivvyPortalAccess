#:import la kivy.adapters.listadapter
#:import lbl kivy.uix.label
#:import ok main

PortalRoot:

<PortalRoot>:
    AccountDetailsForm:
 
<AccountDetailsForm>:
    anchor_y: "top"
    pin_box: pin_input
    username_box: username_input
    password_box: password_input
    BoxLayout:
        orientation: "vertical"
        height: "200dp"
        size_hint_y: None
        GridLayout:
            cols: 2
            row_default_height: "40dp"
            row_force_default: True
            spacing: "10dp"
            padding: "10dp"
            
            Label:
                text: "Username"
            TextInput:
                id: username_input
            Label:
                text: "Password"
            TextInput:
                password: True
                id: password_input
            Label:
                text: "Pin"
            TextInput:
                password: True
                id: pin_input
        Button:
            size_hint_y: None
            height: "40dp"
            text: "Login"
            on_press: root.login()

<CourseListItem>:
    size_hint_y: None
    height: "75dp"
    selected_color: (0.2, 0.1, 0.2, 1.0)   
    on_release: app.root.show_mp_grades(self.course_name)  
    BoxLayout:
        size_hint_x: 3
        orientation: 'vertical'
        Label:
            text: root.course_name
            font_size: "25dp"
            size_hint_y: 0.7
        Label:
            text: root.grades
            color: (0.5, 0.5, 0.5, 1.0)
            font_size: "15dp"
            size_hint_y: 0.3

<CourseList>:
    list_view: list_view
    ListView:
        id: list_view
        adapter: la.ListAdapter(data=[], cls=ok.CourseListItem, args_converter=root.grade_converter)


<MPGradeWindow>:
    orientation: "vertical"
    Label:
        text: root.course_name
        size_hint_y: None
        height: "40dp"
    BoxLayout:
        size_hint_y: None
        height: "50dp"
        orientation: 'vertical'
        Label:
            text: 'MP1: ' + root.MP1
            size_hint_y: None
            font_size: "25dp"
            height: "25dp" 
        Label:
            text: 'MP2: ' + root.MP2
            size_hint_y: None
            font_size: "25dp"
            height: "25dp" 
        Label:
            text: 'MP3: ' + root.MP3
            size_hint_y: None
            font_size: "25dp"
            height: "25dp" 
        Label:
            text: 'MP4: ' + root.MP4
            size_hint_y: None
            font_size: "25dp"
            height: "25dp"
    Button:
        size_hint_x: None
        width: "70dp"
        text: "Back"
        on_release: app.root.show_course_list()